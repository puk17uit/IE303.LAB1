import java.util.Random;

public class BaiTap2 {

    public static void main(String[] args) {
        int totalPoints = 1000000; // số lượng điểm dùng để mô phỏng
        int insideCircle = 0;
        Random rand = new Random();

        for (int i = 0; i < totalPoints; i++) {
            double x = rand.nextDouble() * 2 - 1; // x ∈ [-1, 1]
            double y = rand.nextDouble() * 2 - 1; // y ∈ [-1, 1]

            if (x * x + y * y <= 1) {
                insideCircle++;
            }
        }

        double approxPi = 4.0 * insideCircle / totalPoints;
        double realPi = Math.PI;
        double error = calculateError(approxPi, realPi);

        System.out.println("Giá trị xấp xỉ của π là: " + approxPi);
        System.out.println("Giá trị thật của π là: " + realPi);
        System.out.println("Sai số tuyệt đối là: " + error);
    }

    // Hàm tính sai số tuyệt đối
    public static double calculateError(double approx, double actual) {
        return Math.abs(approx - actual);
    }
}
